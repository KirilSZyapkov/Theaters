<form class="theater-form" action="/theater/create" method="POST">
    <h1>Create Theater</h1>
    <div>
        <label for="title">Theater Title:</label>
        <input type="text" placeholder="Theater name" value="{{data.title}}" name="title">
    </div>
    <div>
        <label for="description">Theater Description:</label>
        <textarea placeholder="Description" name="description" >{{data.description}}</textarea>
    </div>
    <div>
        <label for="imageUrl">Image url:</label>
        <input type="text" placeholder="imageUrl" value="{{data.imageUrl}}" name="imageUrl">
    </div>
    <div class="check">
        <input type="checkbox" id="check-box" name="checkBox" >
        <label for="check-box">Public</label>
    </div>
    <button class="btn" type="submit">Submit</button>
</form>