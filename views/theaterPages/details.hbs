<div class="container">

    <section class="details">
        <h1>{{data.title}}</h1>
        <div>
            <img src="{{data.imageUrl}}" />
        </div>
    </section>

    <section class="details">
        <h3>Theater Description</h3>
        <p>{{data.description}}</p>
        <div class="buttons">
            {{#if user.isOwner}}
            <a class="btn delete" href="/theater/details/delete/{{data._id}}">Delete</a>
            <a class="btn edit" href="/theater/details/edit/{{data._id}}">Edit</a>
            {{else}}
            {{#if user.isLike}}
            <span class="liked">You have already liked this play!</span>
            {{else}}
            <a class="btn like" href="/theater/details/like/{{data._id}}">Like</a>
            {{/if}}
            {{/if}}

        </div>
    </section>
</div>